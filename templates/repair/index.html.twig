{% extends 'base.html.twig' %}

{% block title %}Hello RepairController!{% endblock %}

{% block child_javascripts %}
    <script src="/js/people.js" type="text/javascript"></script>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="data-table">
            {% if repairList is empty %}
                <table class="table table-sm table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</td>
                            <th scope="col">Asset Tag</td>
                            <th scope="col">Assigned Slot</td>
                            <th scope="col">Assigned Person</td>
                            <th scope="col">Created At</td>
                            <th scope="col">Modified At</td>
                            <th scope="col">Modified By</td>
                            <th scope="col">Parts Needed</td>
                            <th scope="col">Actions</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="9">
                                No Data found.
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
            <div class="mb-2">
                <input class="form-control" id="filterTableInput" type="text" placeholder="Filter..." />
            </div>
            <table class="table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</td>
                        <th scope="col">Asset Tag</td>
                        <th scope="col">Assigned Slot</td>
                        <th scope="col">Assigned Person</td>
                        <th scope="col">Created At</td>
                        <th scope="col">Modified At</td>
                        <th scope="col">Modified By</td>
                        <th scope="col">Parts Needed</td>
                        <th scope="col">Actions</td>
                    </tr>
                </thead>
                <tbody id="filterableTable">
                    {% for key, repair in repairList %}
                        <tr>
                            <th scope="row">{{ loop.index0 }}</th>
                            <td>{{ repair.assetTag }}</td>
                            <td>{{ repair.slot }}</td>
                            <td>{{ repair.assignedPerson }}</td>
                            <td>{{ repair.createdAt|date('Y-m-d h:i') }}</td>
                            <td>{{ repair.modifiedAt|date('Y-m-d h:i') }}</td>
                            <td>{{ repair.technician }}</td>
                            <td>{{ repair.items|join(', ') }}</td>
                            <td>Edit | Delete</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
